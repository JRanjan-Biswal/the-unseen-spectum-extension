{
  "manifest_version": 3,
  "name": "TUS",
  "version": "1.0.0",
  "description": "Experience a new perspective. The Unseen Spectrum uses simulations to show you the world as a color blind person sees it. Prepare to see color in a whole new light.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "The Unseen Spectrum",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["color-blind-simulation.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
